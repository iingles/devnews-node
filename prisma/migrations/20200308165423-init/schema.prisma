datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String?
  displayName String?
  email String  @unique
  dob String
  phone String
  location String
  bio String
  posts Post[]
  followers User[] @relation(name: "User")
  following User[] @relation(name: "User")
}

model Post {
  id        Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User?
  content   String?
  mediaURL String
  published Boolean @default(false)
  
}

